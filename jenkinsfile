pipeline {
  agent { label "build && windows" }
  stages {
    stage('Clean Workspace'){
      steps {
        cleanWs()
      }
    }
    
    stage('Git Checkout'){
        steps {
            git branch: 'frwe', credentialsId: 'sweco-dkmijo', url: 'https://github.com/sweco-dkmijo/InoDayJenkins'
        }
    }
    
    stage('Nuget Restore') {
      steps {
        bat label: 'Nuget Restore', 
        script: '''
          dotnet nuget restore
        ''' 
      }
    }

    stage('Build') {
      steps {
        script {
            '''
            dotnet build
            '''      
            }
        }
    }

    stage('Publish') {
      steps {
        script {
            '''
            dotnet publish -o out/
            '''      
            }
        }
    }
  }
}